html
    head
        title= title
        link(href='/css/main.css', rel='stylesheet')
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
    body
        h1 Register
            h3 กรุณาใส่ข้อมูลให้ครบทุกช่อง
                form.form-horizontal(method="POST", action='create')
                    div.form-group
                        label.control-label.col-sm-2 First Name:
                        div.col-sm-10
                            input.form-control(type="text", name="firstname", placeholder="Enter First Name")
                    div.form-group
                        label.control-label.col-sm-2 Last Name:
                        div.col-sm-10
                            input.form-control(type="text", name="lastname", placeholder="Enter Last Name")
                    div.form-group
                        label.control-label.col-sm-2 Username:
                        div.col-sm-10
                            input.form-control(type="text", name="username", placeholder="Enter Username")
                    div.form-group
                        label.control-label.col-sm-2 Email:
                        div.col-sm-10
                            input.form-control(type="email", name="email", placeholder="Enter Email")
                    div.form-group
                        label.control-label.col-sm-2 Password:
                        div.col-sm-10
                            input.form-control(type="password", name="password", placeholder="Enter Password")

                    div.form-group
                        div.col-sm-offset-2.col-sm-10
                            button.btn.btn-default(type="submit", value="Register") Register